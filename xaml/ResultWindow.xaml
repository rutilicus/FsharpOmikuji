<?xml version="1.0" encoding="utf-8" ?>
<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="おみくじ結果" Height="350" Width="525"
        ShowInTaskbar="False">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <TextBlock x:Name="Fortune" Text="{Binding Path=Fortune, StringFormat=運勢: {0}}"/>
            <TextBlock x:Name="Message" Text="{Binding Path=Message, StringFormat=神託: {0}}"/>
        </StackPanel>
    </Grid>
</Window>

